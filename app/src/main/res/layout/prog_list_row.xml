<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prog_row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/prog_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:paddingTop="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/prog_trackDur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:text="03:20"
        android:paddingTop="10dp"
        android:visibility="visible" />
    <!--END ICON & DURATION FIELDS-->

    <TextView
        android:id="@+id/prog_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/prog_trackDur"
        android:layout_toStartOf="@+id/ic_like_heart"
        android:text="@string/txt_dummy"
        android:textSize="16sp"
        android:textColor="@color/dark_grey_blue"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="4sp"
        tools:text="@string/txt_dummy"
        />

    <TextView
        android:id="@+id/prog_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prog_track"
        android:layout_toEndOf="@+id/prog_trackDur"
        android:layout_toStartOf="@+id/ic_like_heart"
        android:text="@string/txt_dummy"
        android:textSize="15sp"
        android:textColor="@color/slate_grey"
        android:lineSpacingExtra="5sp"/>

    <ImageButton
        android:id="@+id/ic_like_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_heart_empty"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp" />

</RelativeLayout>